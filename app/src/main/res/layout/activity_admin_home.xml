<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawer_admin"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminHome">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/white"
           >

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/design_bottom_round"
               android:padding="15dp"
               android:id="@+id/topBar_adminHome"
               android:elevation="10dp"
               >

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:scaleType="fitXY"
                   android:src="@drawable/hamburger_ic"
                   android:layout_marginTop="10dp"
                   android:id="@+id/hamburgerIcon_adminhome"
                   />

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/logo_layout_admminHome"
                   >

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="22sp"
                       android:textStyle="bold"
                       android:text="TN-46"
                       android:layout_gravity="center"
                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="12sp"
                       android:textStyle="normal"
                       android:text="The  connecting always"
                       />



               </LinearLayout>







               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:background="@drawable/design_serchbar"
                   android:padding="5dp"
                   android:drawableLeft="@drawable/search_ic"
                   android:drawableTint="@color/black"
                   android:drawablePadding="4dp"
                   android:hint="Search your favouite item here"
                   android:textColorHint="#A9A9A9"
                   android:textColor="@color/black"
                   android:layout_below="@id/logo_layout_admminHome"
                   android:layout_marginTop="12dp"
                   android:id="@+id/searchBar_adminHome"
                   android:editable="false"
                   />


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="12dp"
                   android:layout_below="@id/searchBar_adminHome"
                   android:orientation="vertical"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="17sp"
                       android:textStyle="bold"
                       android:text="Choose from categories"
                       />

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_gravity="center"
                       android:layout_marginTop="7dp"
                       >

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:padding="14dp"
                           android:orientation="vertical"
                           android:background="@drawable/category_box"
                           >
                           <ImageView
                               android:layout_width="35dp"
                               android:layout_height="35dp"
                               android:src="@drawable/fashion_ic"
                               android:layout_gravity="center"
                               android:id="@+id/fashionCat_adminhome"
                               />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="12sp"
                               android:textColor="@color/black"
                               android:text="Fashion"
                               android:layout_gravity="center"
                               />



                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:padding="14dp"
                           android:orientation="vertical"
                           android:background="@drawable/category_box"
                           android:layout_marginLeft="40dp"
                           android:layout_marginRight="40dp"
                           >
                           <ImageView
                               android:layout_width="35dp"
                               android:layout_height="35dp"
                               android:src="@drawable/groceries_ic"
                               android:layout_gravity="center"
                               android:id="@+id/groceriesCat_adminhome"
                               />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="12sp"
                               android:textColor="@color/black"
                               android:text="Groceries"
                               android:layout_gravity="center"
                               />



                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:padding="14dp"
                           android:orientation="vertical"
                           android:background="@drawable/category_box"
                           >
                           <ImageView
                               android:layout_width="35dp"
                               android:layout_height="35dp"
                               android:layout_gravity="center"
                               android:src="@drawable/electronic_ic"
                               android:id="@+id/electronicsCat_adminhome"
                               />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="12sp"
                               android:textColor="@color/black"
                               android:text="Electronics"
                               android:layout_gravity="center"
                               />



                       </LinearLayout>








                   </LinearLayout>



               </LinearLayout>

           </RelativeLayout>





           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/topBar_adminHome"
               android:orientation="vertical"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="10dp"
                   >

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="14sp"
                       android:text="Best Deals for you"
                       android:fontFamily="sans-serif-condensed-medium"
                       />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="#0000FF"
                       android:gravity="right"
                       android:textSize="9sp"
                       android:visibility="gone"
                       android:text="See all"
                       android:id="@+id/seeall_admin_elec"
                       android:fontFamily="sans-serif-condensed-medium"
                       />

               </LinearLayout>


               <androidx.recyclerview.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp"
                   android:id="@+id/electronisRecycler_adminhome"
                   />


               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:cardCornerRadius="25dp"
                   android:elevation="10dp"
                   android:layout_margin="10dp"
                   >

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="220dp"
                       android:src="@drawable/final_logo"
                       android:scaleType="fitXY"
                       android:id="@+id/banner_adminhome"
                       />



               </androidx.cardview.widget.CardView>




               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:padding="5dp"
                   android:background="@color/mainyellow"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:layout_marginTop="10dp"
                           >

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="@color/black"
                               android:textSize="14sp"
                               android:text="Family's choices from TN-46"
                               android:fontFamily="sans-serif-condensed-medium"
                               />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:textColor="#0000FF"
                               android:gravity="right"
                               android:textSize="9sp"
                               android:visibility="gone"
                               android:text="See all"
                               android:id="@+id/seeall_admin_groc"
                               android:fontFamily="sans-serif-condensed-medium"
                               />

                       </LinearLayout>


                       <androidx.recyclerview.widget.RecyclerView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_margin="10dp"
                           android:id="@+id/geroceryrecycler_adminhome"
                           />


                   </LinearLayout>

               </RelativeLayout>



               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="10dp"
                   >

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="14sp"
                       android:text="Sponsered Brand"
                       android:fontFamily="sans-serif-condensed-medium"
                       />


               </LinearLayout>




               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:cardCornerRadius="25dp"
                   android:elevation="10dp"
                   android:layout_margin="10dp"
                   >
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="120dp"
                       android:src="@drawable/final_logo"
                       android:scaleType="fitXY"
                       android:id="@+id/sponseredAdd_adminhome"
                       />
               </androidx.cardview.widget.CardView>



               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="10dp"
                   >

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="14sp"
                       android:text="Latest Fashion Picks"
                       android:fontFamily="sans-serif-condensed-medium"
                       />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="#0000FF"
                       android:gravity="right"
                       android:visibility="gone"
                       android:textSize="9sp"
                       android:id="@+id/seeall_admin_fash"
                       android:text="See all"
                       android:fontFamily="sans-serif-condensed-medium"
                       />

               </LinearLayout>


               <androidx.recyclerview.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp"
                   android:id="@+id/fashionRecycler_adminhome"
                   />







           </LinearLayout>








       </RelativeLayout>



   </ScrollView>




    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_admin"
        app:menu="@menu/menu_admin_home"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"

        />


</androidx.drawerlayout.widget.DrawerLayout>