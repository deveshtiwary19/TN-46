<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp"
    android:elevation="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <ImageView
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_margin="4dp"
            android:src="@drawable/placeholder"
            android:scaleType="fitXY"
            android:id="@+id/image_cartItem"
            />


        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="Item Name"
                android:id="@+id/name_cartItem"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="Variant: 2 GB"
                android:id="@+id/variant_cartItem"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:text="Rs. XX.00/-"
                android:id="@+id/totalPrice_cartItem"
                />


        </LinearLayout>




        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:id="@+id/qtyControl_cartItem"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/mainyellow"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_ic"
                    android:layout_margin="4dp"
                    android:paddingTop="2dp"
                    android:id="@+id/addBtn_cartItem"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:text="01"
                    android:gravity="center"
                    android:id="@+id/qty_cartItem"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/minus_ic"
                    android:layout_margin="4dp"
                    android:paddingBottom="4dp"
                    android:id="@+id/minusBtn_cartItem"
                    />





            </LinearLayout>





        </androidx.cardview.widget.CardView>









    </LinearLayout>







</androidx.cardview.widget.CardView>