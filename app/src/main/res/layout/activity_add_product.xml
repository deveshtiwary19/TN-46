                   android:layout_width="120dp"
                   android:layout_height="45dp"
                   android:background="#A9A9A9"
                   android:layout_marginLeft="12dp"
                   android:text="6 GB"
                   android:layout_marginTop="10dp"
                   android:id="@+id/sixgb_btn"
                   />

               <Button
                   android:layout_width="120dp"
                   android:layout_height="45dp"
                   android:background="#A9A9A9"
                   android:layout_marginLeft="12dp"
                   android:text="8 GB"
                   android:layout_marginTop="10dp"
                   android:id="@+id/eightgb_btn"
                   />

               <Button
                   android:layout_width="120dp"
                   android:layout_height="45dp"
                   android:background="#A9A9A9"
                   android:layout_marginLeft="12dp"
                   android:text="Others"
                   android:layout_marginTop="10dp"
                   android:id="@+id/othreselectrical_btn"
                   />

           </LinearLayout>


                <!--Following is the layout for the grocery category-->

            <LinearLayout
