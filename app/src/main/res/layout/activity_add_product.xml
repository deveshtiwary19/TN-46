<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.AddProduct">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/backbtn_ic"
                app:tint="@color/black"
                android:layout_marginTop="10dp"
                android:id="@+id/backBtn_addProduct"
                android:layout_marginLeft="15dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text="You are adding product under\nElectronics category"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:id="@+id/title_addProduct"
                />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="10dp"
                android:src="@drawable/addimage_ic"
                android:id="@+id/image1_addProduct"
              />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:src="@drawable/addimage_ic"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/image2_addProduct"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:src="@drawable/addimage_ic"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/image3_addProduct"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:src="@drawable/addimage_ic"
                    android:layout_marginRight="10dp"
                    android:id="@+id/image4_addProduct"
                    android:layout_weight="1"/>



            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:text="*Make sure the image fits properly in the first box. It is the proper size of the image shown to the users."
                android:layout_marginLeft="45dp"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/editttxt"
                android:layout_margin="10dp"
                android:textColorHint="#A9A9A9"
                android:textColor="@color/black"
                android:hint="Enter the product name"
                android:maxLines="2"
                android:id="@+id/name_addProduct"
                android:padding="10dp"
                android:inputType="text"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/editttxt"
                android:layout_margin="10dp"
                android:textColorHint="#A9A9A9"
                android:textColor="@color/black"
                android:hint="Enter the product price(in Rupees)"
                android:maxLines="1"
                android:padding="10dp"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:id="@+id/price_addProduct"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/editttxt"
                android:layout_margin="10dp"
                android:textColorHint="#A9A9A9"
                android:hint="Brief description about product"
                android:maxLines="2"
                android:gravity="start"
                android:padding="10dp"
                android:textColor="@color/black"
                android:inputType="text"
                android:id="@+id/descri_addProduct"
                />


            <!--Following is the layout for the electronics category-->

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:id="@+id/layout_variantschoice_electronics"
               android:visibility="gone"
               >

