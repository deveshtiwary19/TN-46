<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/placeholder"
            android:id="@+id/image_item_productsAdapter"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Item name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:id="@+id/name_item_productsAdapter"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Rs XX.00/-"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:id="@+id/price_item_productsAdapter"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#A9A9A9"
            android:textStyle="bold"
            android:text="Product Description"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="11sp"
            android:id="@+id/descri_item_productsAdapter"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainyellow"
            android:textStyle="bold"
            android:text="....view full product"
            android:layout_gravity="right"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:textSize="11sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/view_item_productsAdapter"
            />




    </LinearLayout>



</androidx.cardview.widget.CardView>