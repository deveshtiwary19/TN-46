<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/design_botttom_sheet"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/placeholder"
            android:id="@+id/image_coBottom"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Product Name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="16sp"
            android:text="Product Name"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:id="@+id/productname_coBottom"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Product Description"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="16sp"
            android:text="Product Name"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:id="@+id/productdescri_coBottom"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Customer Contact"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="16sp"
            android:text="XXXXXXXXXX"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:id="@+id/contact_coBottom"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Following is a link to the product"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/mainyellow"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                android:text="Copy Link"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/copyLink_coBottom"
                />





        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="16sp"
            android:text="http://xxxxxxx/tn-46.ece"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:id="@+id/link_coBottom"
            />












    </LinearLayout>










</RelativeLayout>