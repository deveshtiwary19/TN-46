<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/design_botttom_sheet">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_margin="10dp"
      >

      <ImageView
          android:layout_width="120dp"
          android:layout_height="120dp"
          android:src="@drawable/final_logo"
          android:layout_gravity="center"
          />



      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="16sp"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:text="Password Recovery Pannel"
          android:layout_marginTop="20dp"
          />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:background="@drawable/editttxt"
          android:layout_marginTop="10dp"
          android:hint="Enter registered email"
          android:textColorHint="#A9A9A9"
          android:padding="5dp"
          android:id="@+id/email_forgetPassword"
          android:textColor="@color/black"
          />


      <Button
          android:layout_width="match_parent"
          android:layout_height="55dp"
          android:background="@drawable/buttons"
          android:layout_marginTop="10dp"
          android:textColor="@color/black"
          android:text="Send Link"
          android:textStyle="bold"
          android:textSize="18sp"
          android:id="@+id/sendLink_forgetPassword"
          android:textAllCaps="false"
          />






  </LinearLayout>



</RelativeLayout>